		<class>eu.com.impress.model.FusionLog</class>
		<class>eu.com.impress.model.FusionRule</class>
		<class>eu.com.impress.model.FusionRuleLog</class>
		<class>eu.com.impress.model.Place</class>
		<class>eu.com.impress.model.PlaceType</class>
		<class>eu.com.impress.model.Resource</class>
		<class>eu.com.impress.model.ResourceActionType</class>
		<class>eu.com.impress.model.ResourceContext</class>
		<class>eu.com.impress.model.ResourceFusion</class>
		<class>eu.com.impress.model.ResourceFusionLog</class>
